<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Version>1.5.0</Version>
		<OutputType>Exe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<PackAsTool>true</PackAsTool>
		<ToolCommandName>bbadmin</ToolCommandName>
		<PackageOutputPath>./bin/nupkg</PackageOutputPath>
		<ImplicitUsings>enable</ImplicitUsings>
        <AssemblyName>Backbone.Modules.$(MSBuildProjectName)</AssemblyName>
        <RootNamespace>$(AssemblyName.Replace(" ", "_"))</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\..\Backbone.API\Backbone.API.csproj" />
		<ProjectReference Include="..\Devices.Infrastructure\Devices.Infrastructure.csproj" />
	</ItemGroup>

</Project>

    </ItemGroup>

    <ItemGroup>
        <None Update="Config\PerformanceTestData-plusNewMedium.xlsx">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Config\pool-config.heavy.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Config\pool-config.light.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Config\pool-config.test.json">

{
    "AllowedHosts": "*",
    "Authentication": {
        "JwtLifetimeInSeconds": 300
    },
    "SwaggerUi": {
        "Enabled": false
    },
    "Infrastructure": {
        "EventBus": {
            "SubscriptionClientName": "adminui"
        }
    },
    "Modules": {
        "Quotas": {
            "Application": {
                "Pagination": {
                    "DefaultPageSize": 50,
                    "MaxPageSize": 200
                }
            }
        },
        "Devices": {
            "Application": {
                "InstanceUrl": "prod.enmeshed.eu",
                "Pagination": {
                    "DefaultPageSize": 50,
                    "MaxPageSize": 200
                }
            }
        }
    },
    "Logging": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "Backbone": "Information",
                "Enmeshed": "Information",
                "AdminApi": "Information",

                "Microsoft": "Information"
            }
        },
        "WriteTo": {
            "Console": {
                "Name": "Console",
                "Args": {
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        }
    }
}
